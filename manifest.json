{
    "manifest_version": 3,
    "name": "JD-CV Match Analyzer",
    "version": "1.0.0",
    "description": "Analyze job descriptions against your CV and get tailored suggestions using AI",
    "permissions": [
        "activeTab",
        "scripting",
        "storage",
        "identity"
    ],
    "oauth2": {
        "client_id": "737539383779-8bc3aah7oc5oasb6tavc68kotv41elip.apps.googleusercontent.com",
        "scopes": [
            "https://www.googleapis.com/auth/userinfo.email",
            "https://www.googleapis.com/auth/userinfo.profile"
        ]
    },
    "host_permissions": [
        "https://www.linkedin.com/*",
        "https://linkedin.com/*",
        "https://*.greenhouse.io/*",
        "https://*.lever.co/*",
        "https://*.workday.com/*",
        "https://*.myworkdayjobs.com/*",
        "https://*.icims.com/*",
        "https://*.smartrecruiters.com/*",
        "https://*.jobvite.com/*",
        "https://careers.google.com/*",
        "https://www.amazon.jobs/*",
        "https://jobs.apple.com/*",
        "https://careers.microsoft.com/*",
        "https://www.metacareers.com/*",
        "https://*.indeed.com/*",
        "https://*.glassdoor.com/*",
        "https://*.ziprecruiter.com/*",
        "https://*.dice.com/*",
        "https://*.monster.com/*",
        "https://*.angel.co/*",
        "https://*.wellfound.com/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.svg",
            "48": "icons/icon48.svg",
            "128": "icons/icon128.svg"
        }
    },
    "background": {
        "service_worker": "background/service_worker.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.linkedin.com/*",
                "https://linkedin.com/*",
                "https://*.greenhouse.io/*",
                "https://*.lever.co/*",
                "https://*.workday.com/*",
                "https://*.myworkdayjobs.com/*",
                "https://*.icims.com/*",
                "https://*.smartrecruiters.com/*",
                "https://*.jobvite.com/*",
                "https://careers.google.com/*",
                "https://www.amazon.jobs/*",
                "https://jobs.apple.com/*",
                "https://careers.microsoft.com/*",
                "https://www.metacareers.com/*",
                "https://*.indeed.com/*",
                "https://*.glassdoor.com/*",
                "https://*.ziprecruiter.com/*",
                "https://*.dice.com/*",
                "https://*.monster.com/*",
                "https://*.angel.co/*",
                "https://*.wellfound.com/*"
            ],
            "js": [
                "content.js",
                "floatingButton.js"
            ],
            "css": [
                "floatingButton.css"
            ],
            "run_at": "document_idle"
        }
    ],
    "icons": {
        "16": "icons/icon16.svg",
        "48": "icons/icon48.svg",
        "128": "icons/icon128.svg"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "pdf.worker.mjs"
            ],
            "matches": [
                "https://www.linkedin.com/*",
                "https://*.greenhouse.io/*",
                "https://*.lever.co/*"
            ]
        }
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'none';"
    }
}